# MongoDB Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=APP_NAME
PORT=5001
NEXT_PUBLIC_API_URL=

# WhatsApp Business API (Meta Cloud API)
# Setup guide: https://developers.facebook.com/docs/whatsapp/cloud-api/get-started
# 1. Create Facebook Business Account
# 2. Create WhatsApp Business App
# 3. Get credentials from App Dashboard
WHATSAPP_API_URL=https://graph.facebook.com/v21.0
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token_from_meta
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_from_meta
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=generate_random_secure_string
WHATSAPP_APP_SECRET=your_app_secret_for_webhook_verification

# Redis (for Bull queue - required for WhatsApp background jobs)
# Install: brew install redis (Mac) or apt-get install redis-server (Linux)
# Start: redis-server
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional_if_redis_is_secured

# AI Integration (Optional - for AI-powered message generation)
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Encryption (for storing WhatsApp Channel credentials securely)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_32_char_hex_string_for_aes256

# JWT Authentication
JWT_SECRET=generate_secure_jwt_secret_key
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
